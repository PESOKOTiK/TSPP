<Window x:Class="TSPP.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TSPP"
        Background="DarkGray"
        mc:Ignorable="d"
        Title="Login" Height="400" Width="240">
    
    <StackPanel VerticalAlignment="Center">
        <Image Margin="10" Source="https://telegra.ph/file/11ac04e1b125941713d00.png"/>
        <TextBox x:Name="UsernameTextBox" Margin="10" MinHeight="20" MinWidth="180" Style="{StaticResource DarkTextBoxStyle}"/>
        <PasswordBox x:Name="PasswordBox" Margin="10" Style="{StaticResource DarkPassBoxStyle}"/>
        <Button Content="Login" Click="LoginButton_Click" Margin="10"  Style="{StaticResource DarkButtonStyle}"/>
        <Button Content="New account?  Register" Margin="10" Click="Register"  Style="{StaticResource DarkButtonStyle}"/>
        <Button Content="Continue as guest" Margin="10" Click="Button_Click"  Style="{StaticResource DarkButtonStyle}"/>
    </StackPanel>
</Window>
